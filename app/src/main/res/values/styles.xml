<resources>
    <dimen name="my_activity_padding">5dp</dimen>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PictureItTheme" parent="AppTheme" >
        <item name="android:colorBackground">@color/colorSecondary</item>
        <item name="android:colorForeground">@color/colorSmooth</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

    <style name="Theme.PictureItTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
